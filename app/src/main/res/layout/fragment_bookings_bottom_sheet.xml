<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:id="@+id/booking_list">

    <TextView
        android:id="@+id/booking_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking List"
        android:textSize="20sp"
        android:textColor="@color/mainColorLight"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/load_booking_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_list_text"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:textSize="15sp"/>

    <ExpandableListView
        android:id="@+id/expandable_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/load_booking_date"
        android:layout_above="@id/hide_bottom_sheet_btn"/>

    <Button
        android:id="@+id/hide_bottom_sheet_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn"
        android:text="Hide Booking list"/>



</RelativeLayout>