<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/add_booking_dialog">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/add_booking_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Booking"
            android:textSize="20sp"
            android:textColor="@color/mainColorLight"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/add_booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_booking_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/add_booking_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_booking_date"
            android:layout_marginTop="15dp"
            android:text="Name"/>

        <EditText
            android:id="@+id/add_booking_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_booking_name_text"
            android:inputType="text"/>

        <TextView
            android:id="@+id/add_booking_contact_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_booking_name"
            android:layout_marginTop="5dp"
            android:text="Contact"/>

        <EditText
            android:id="@+id/add_booking_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_booking_contact_text"
            android:inputType="text"/>


        <TextView
            android:id="@+id/add_booking_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_booking_contact"
            android:layout_marginTop="5dp"
            android:text="Time"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_booking_time_text"
            android:layout_marginVertical="10dp"
            android:entries="@array/time_section"/>


    </RelativeLayout>

</LinearLayout>